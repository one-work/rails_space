<%= button_to({ action: 'destroy' }, method: :delete, class: 'cell has-column-centered', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
  <i class="fa-solid fa-trash color-danger"></i>
  <span><%= t('.destroy.title') %></span>
<% end %>
<%= button_to({ action: 'edit' }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'pencil' %>
  <span><%= t('.edit.title') %></span>
<% end %>
<%= link_to({ action: 'show' }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'circle-info', class: 'icon text-info' %>
  <span><%= t('.show.title') %></span>
<% end %>
<%= link_to({ controller: 'rooms', station_id: model.id }, class: 'cell has-column-centered') do %>
  <i class="fa-solid fa-shop text-info"></i>
  <span><%= t('.rooms.index.title') %></span>
<% end %>
