<div class="box is-padding-less">
  <div class="box-body">
    <span class="size-7 has-border-left-primary"><%= t('space.admin.title') %></span>
  </div>
  <div class="fixed-grid has-4-cols is-shadow p-3">
    <div class="grid">
      <%= link_to({ controller: 'space/admin/stations' }, class: 'cell has-column-centered') do %>
        <div class="text-primary">
          <%= svg_tag 'building', class: 'icon is-medium' %>
        </div>
        <div class="text-grey size-7 mt-1"><%= t('space.admin.stations.index.title') %></div>
      <% end %>
      <%= link_to({ controller: 'space/admin/desks', action: 'all' }, class: 'cell has-column-centered') do %>
        <div class="text-primary">
          <%= svg_tag 'chair', class: 'icon is-medium' %>
        </div>
        <div class="text-grey size-7 mt-1"><%= t('space.admin.desks.all.title') %></div>
      <% end %>
    </div>
  </div>
</div>
